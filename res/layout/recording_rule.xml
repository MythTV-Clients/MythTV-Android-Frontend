<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal">
    	
        <View
            android:id="@+id/recording_rule_category_color"
            android:layout_width="10dip"
            android:layout_height="fill_parent"
            android:background="@color/program_category_Action" />
        
        <LinearLayout
	        android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:paddingLeft="10dip"
	    	android:paddingRight="10dip"
	    	android:orientation="vertical">
	   	
	    	
	        <TextView
		  		android:id="@+id/recording_rule_title"
		  		android:layout_width="fill_parent"
		  		android:layout_height="wrap_content"
		  		android:textColor="@color/body_text_1"
		  		android:textAppearance="?android:attr/textAppearanceLarge" />
	        
	        <TextView
		  		android:id="@+id/recording_rule_sub_title"
		  		android:layout_width="fill_parent"
		  		android:layout_height="wrap_content"
		  		android:textColor="@color/body_text_1"
		  		android:visibility="gone"
		  		android:textAppearance="?android:attr/textAppearance" />

	        <TextView
		  		android:id="@+id/recording_rule_category"
		  		android:layout_width="fill_parent"
		  		android:layout_height="wrap_content"
		  		android:textColor="@color/body_text_1"
		  		android:textAppearance="?android:attr/textAppearance" />
	        
	        <RelativeLayout
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal" >
		        
		        <TextView
			  		android:id="@+id/recording_rule_channel"
			  		android:layout_width="wrap_content"
			  		android:layout_height="wrap_content"
			  		android:textColor="@color/body_text_1"
			  		android:textAppearance="?android:attr/textAppearance"
			  		android:layout_centerVertical="true"
			  		android:layout_alignParentLeft="true" />
		        
			    <TextView
			  		android:id="@+id/recording_rule_type"
			  		android:layout_width="wrap_content"
			  		android:layout_height="wrap_content"
			  		android:textColor="@color/body_text_1"
			  		android:textAppearance="?android:attr/textAppearance"
			  		android:layout_centerVertical="true"
			  		android:layout_alignParentRight="true" />
			    
		    </RelativeLayout>
	        
        </LinearLayout>
        
    </LinearLayout>
    
    
    
    <CheckBox
        android:id="@+id/recording_rule_checkBox_active"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:text="@string/chkbox_rec_rule_active" />

    <CheckBox
        android:id="@+id/recording_rule_checkBox_auto_comm_flag"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:text="@string/chkbox_rec_rule_auto_comm_flag" />

    <CheckBox
        android:id="@+id/recording_rule_checkBox_auto_transcode"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:text="@string/chkbox_rec_rule_auto_transcode" />

    <CheckBox
        android:id="@+id/recording_rule_checkBox_auto_meta_lookup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:text="@string/chkbox_rec_rule_auto_meta_lookup" />

    <CheckBox
        android:id="@+id/recording_rule_checkBox_auto_usr_job1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:text="@string/chkbox_rec_rule_auto_usr_job1" />

    <CheckBox
        android:id="@+id/recording_rule_checkBox_auto_usr_job2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:text="@string/chkbox_rec_rule_auto_usr_job2" />

    <CheckBox
        android:id="@+id/recording_rule_checkBox_auto_usr_job3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:text="@string/chkbox_rec_rule_auto_usr_job3" />

    <CheckBox
        android:id="@+id/recording_rule_checkBox_auto_usr_job4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:text="@string/chkbox_rec_rule_auto_usr_job4" />
    
</LinearLayout>