<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/program_guide_channel"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:focusable="true"
    style="@style/ProgramGuideChannelHeader">

	<TextView
		android:id="@+id/program_guide_channel_number"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:textSize="14sp"
		android:focusable="false"
	/>

	<ImageView
		android:id="@+id/program_guide_channel_icon"
		android:layout_width="32dp"
		android:layout_height="32dp"
		android:gravity="center"
		android:contentDescription="@string/program_guide_icon_content_disposition"
		android:src="@drawable/tv"
		android:focusable="false"
	/>
	
	<TextView
		android:id="@+id/program_guide_channel_callsign"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:textSize="12sp"
		android:ellipsize="none"
		android:singleLine="true"
		android:focusable="false"
	/>

</LinearLayout>