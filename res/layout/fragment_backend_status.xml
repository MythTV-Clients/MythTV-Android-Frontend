<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp" >
    
    <TextView
	    android:id="@+id/textview_status_header"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    style="@style/BackendStatusHeader"
	    android:text="MythTV Android Frontend Connection Status"/>
    <ImageView 
	    android:layout_width="match_parent"
	    android:layout_height="6dp"
	    android:paddingBottom="2dp"
	    android:src="@drawable/standard_horizontal_line"/>
	<TextView
	    android:id="@+id/textview_status"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingLeft="5dp"
	    android:text="Backend Status placeholder"/>
	
	
	<TextView
	    android:id="@+id/textview_encoders_header"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    style="@style/BackendStatusHeader"
	    android:text="Encoders"/>
	<ImageView 
	    android:layout_width="match_parent"
	    android:layout_height="6dp"
	    android:paddingBottom="2dp"
	    android:src="@drawable/standard_horizontal_line"/>
	<ListView
	    android:id="@+id/listview_encoders"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingLeft="5dp" />

</LinearLayout>