<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   	android:layout_width="fill_parent"
   	android:layout_height="wrap_content"
   	android:orientation="horizontal" 
   	android:layout_weight="0.5">

    <View
       	android:id="@+id/guide_timeslot_category"
       	android:layout_width="10dp"
       	android:layout_height="fill_parent"
       	android:background="#ff0000" />
    
	<LinearLayout
	    android:id="@+id/guide_timeslot_recording_status"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:padding="5dp" >

		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical" >

			<TextView
			    android:id="@+id/guide_timeslot"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:ellipsize="end"
			    android:paddingLeft="8dp"
			    android:paddingRight="8dp"
			    android:text="@string/guide_time_slot"
			    android:textColor="@color/body_text_1"
			    android:textSize="12dp" />

			<TextView
			    android:id="@+id/guide_timeslot_description"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:ellipsize="end"
			    android:paddingLeft="8dp"
			    android:paddingRight="8dp"
			    android:text="@string/guide_time_slot_description"
			    android:textColor="@color/body_text_1"
			    android:textSize="9dp" />

		</LinearLayout>
					
	</LinearLayout>

</LinearLayout>