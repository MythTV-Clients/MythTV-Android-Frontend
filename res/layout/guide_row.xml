<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/guide_row"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >
    
	<TextView
		android:id="@+id/guide_channel"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:width="50dp"
		android:text="chan"
		android:textColor="@color/body_text_1" />
						
    <LinearLayout
        android:id="@+id/guide_container_slot_1"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal" 
    	android:layout_weight="0.5">

    	<View
        	android:id="@+id/guide_slot_1_category"
        	android:layout_width="10dp"
        	android:layout_height="fill_parent"
        	android:background="#ff0000" />
    
		<LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical" >
				    		    
			<TextView
				android:id="@+id/guide_slot_1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="time slot 1"
				android:textSize="12dp"
				android:textColor="@color/body_text_1"
				android:ellipsize="end"
		   		android:paddingLeft="8dp"
		   		android:paddingRight="8dp" />
						
			<TextView
				android:id="@+id/guide_slot_1_description"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="time slot 1 description"
				android:textSize="9dp"
				android:textColor="@color/body_text_1"
				android:ellipsize="end"
		   		android:paddingLeft="8dp"
		   		android:paddingRight="8dp" />
					
		</LinearLayout>
		
	</LinearLayout>

    <LinearLayout
        android:id="@+id/guide_container_slot_2"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:layout_weight="0.5" >

    	<View
        	android:id="@+id/guide_slot_2_category"
        	android:layout_width="10dp"
        	android:layout_height="fill_parent"
        	android:background="#ff0000" />
    
		<LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical" >
				    		    
			<TextView
				android:id="@+id/guide_slot_2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="time slot 2"
				android:textColor="@color/body_text_1"
				android:ellipsize="end"
		   		android:paddingLeft="8dp"
		   		android:paddingRight="8dp" />
						
			<TextView
				android:id="@+id/guide_slot_2_description"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="time slot 2 description"
				android:textSize="9dp"
				android:textColor="@color/body_text_1"
				android:ellipsize="end"
		   		android:paddingLeft="8dp"
		   		android:paddingRight="8dp" />
						
		</LinearLayout>
		
	</LinearLayout>

</LinearLayout>
