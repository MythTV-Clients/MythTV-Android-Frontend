<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <item>
		<shape android:dither="true"
		    android:shape="rectangle" >
		    <gradient android:startColor="#acacac"
		        android:endColor="#8a8a8a"
		        android:angle="270"/>
		    <stroke
		        android:width="2dip"
		        android:color="#4f6166" />
		    <corners android:radius="10dip" />
			<!-- Make sure a min of 100 width -->
		    <size android:width="100dip" android:height="50dip" />
		</shape>
	</item>
	
    <item >
		<inset android:drawable="@drawable/transparent_rectangle"
		    android:insetTop="10dip"
		    android:insetBottom="10dip"
		    android:insetLeft="14dip"
		    android:insetRight="20dip" />
	</item>
	
    <item>
        <bitmap android:src="@drawable/ic_home_toggle_off" 
            android:gravity="left" 
            android:antialias="true" />
    </item>

    <item >
		<inset android:drawable="@drawable/transparent_rectangle"
		    android:insetTop="-8dip"
		    android:insetBottom="-8dip"
		    android:insetLeft="30dip"
		    android:insetRight="-18dip"/>
	</item>
    
    <item android:drawable="@drawable/toggle_button_selector" />
    
    <item >
		<inset android:drawable="@drawable/transparent_rectangle"
		    android:insetRight="12dip"/>
	</item>
	
    <item>
       <bitmap android:src="@drawable/ic_away_toggle_on" 
           android:gravity="right" 
           android:antialias="true"/>
    </item>

</layer-list>