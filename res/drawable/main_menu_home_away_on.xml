<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <item>
		<shape android:dither="true"
		    android:shape="rectangle" >
			
		    <gradient
		        android:startColor="#acacac"
		        android:endColor="#2d3f44"
		        android:angle="135"/>
		    
		    <stroke
		        android:width="2dip"
		        android:color="#2d3f44" />

		    <corners android:radius="10dip" />
		    
		</shape>
	</item>
	
    <item >
		<inset android:drawable="@drawable/transparent_rectangle"
		    android:insetTop="10dip"
		    android:insetBottom="10dip"
		    android:insetLeft="10dip"
		    android:insetRight="10dip" />
	</item>
	
    <item>
        <bitmap android:src="@drawable/ic_home_default" 
            android:gravity="left|fill_vertical" 
            android:antialias="true" />
    </item>
    
    <item>
       <bitmap android:src="@drawable/ic_away_selected" 
           android:gravity="right|fill_vertical" 
           android:antialias="true"/>
    </item>
    
    <item>
        <rotate android:fromDegrees="115"
            android:toDegrees="115" >
			<shape android:shape="line" >
			    
			    <stroke
			        android:width="2dip"
			        android:color="#2d3f44" />
			    
			</shape>
		</rotate>
		
	</item>

</layer-list>