<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <item>
		<shape android:dither="true"
		    android:shape="rectangle" >
		    <gradient android:startColor="#acacac"
		        android:endColor="#8a8a8a"
		        android:angle="90"/>
		    <stroke
		        android:width="2dip"
		        android:color="#4f6166" />
		    <corners android:radius="10dp" />
			<!-- Make sure a min of 100 width -->
		    <size android:width="125dp" android:height="40dp" />
		</shape>
	</item>
	
    <item >
		<inset android:drawable="@drawable/transparent_rectangle"
		    android:insetTop="10dp"
		    android:insetBottom="10dp"
		    android:insetLeft="20dp"
		    android:insetRight="14dp" />
	</item>
	
    <item>
       <bitmap android:src="@drawable/ic_away_toggle_off"
           android:gravity="right"
           android:antialias="true"/>
    </item>

    <item >
		<inset android:drawable="@drawable/transparent_rectangle"
		    android:insetTop="-8dp"
		    android:insetBottom="-8dp"
		    android:insetLeft="-18dp"
		    android:insetRight="30dp"/>
	</item>
    
    <item android:drawable="@drawable/toggle_button_selector" />
    
    <item >
		<inset android:drawable="@drawable/transparent_rectangle"
		    android:insetLeft="12dp"/>
	</item>
	
    <item>
        <bitmap android:src="@drawable/ic_home_toggle_on"
            android:gravity="left" />
    </item>

</layer-list>