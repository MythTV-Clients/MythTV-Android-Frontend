<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recording_rules_detail_row"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <View
        android:id="@+id/recording_rules_category"
        android:layout_width="10dp"
        android:layout_height="fill_parent"
        android:background="#ff0000" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp" >

        <TextView
            android:id="@+id/recording_rules_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/body_text_1" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingRight="8dp" >

            <TextView
                android:id="@+id/recording_rules_channel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:textColor="@color/body_text_1" />

            <TextView
                android:id="@+id/recording_rules_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="false"
                android:textColor="@color/body_text_1" />
            
            <Switch
                android:id="@+id/recording_rules_switch_active"
                android:focusable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/recording_rules_last" />

            <TextView
                android:id="@+id/recording_rules_last"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/recording_rules_switch_active"
                android:layout_centerInParent="false"
                android:textColor="@color/body_text_1" />

            

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>