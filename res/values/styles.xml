<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme is the default theme. -->
    <style name="Theme" parent="android:style/Theme" />
    
    <style name="Theme.Mythtv" parent="android:style/Theme.Light">
    </style>
    
    <style name="DashboardButton">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/accent_1</item>
        <item name="android:background">@null</item>
    </style>
    
    <style name="ProgramGuideTimeSlotHeader">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
		<item name="android:padding">4sp</item>
		<item name="android:background">@drawable/program_guide_timeslot_header_back</item>
	</style>
	
    <style name="ProgramGuideChannelHeader">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:gravity">center_horizontal</item>
		<item name="android:padding">4sp</item>
		<item name="android:background">@drawable/program_guide_timeslot_header_back</item>
	</style>
	
    <style name="NavigationDrawerHeader">
		<item name="android:textColor">@color/text_header_main_menu</item>
		<item name="android:textSize">16sp</item>
	</style>
    
     <style name="ProgramGuideTimeSlotDataItem">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:gravity">center_horizontal</item>
		<item name="android:padding">2sp</item>
		<item name="android:background">@drawable/program_guide_timeslot_header_back</item>
	</style>
	
 </resources>